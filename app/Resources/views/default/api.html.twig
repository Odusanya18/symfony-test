{% block body %}
	{% for item in collection.items %}
		<div class="row">
    		<div class="thumbnail">
      		<img src="{{ item.image }}" alt="{{item.name}}" class="img-responsive img-rounded">
      			<div class="caption">
        			<h3>{{item.name}}</h3>
        			<p>$ {{item.ticketPrice}}</p>
        			<p><a href="/films/{{item.slug}}" class="btn btn-primary" role="button">View Film</a></p>
      			</div>
  			</div>
		</div>
	{% endfor %}
{% endblock %}